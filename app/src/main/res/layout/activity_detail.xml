<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimens_16"
    tools:context=".ui.DetailActivity">

    <TextView
        android:id="@+id/txt_word_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_word"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_8"
        android:layout_marginBottom="@dimen/dimens_8"
        android:text="@string/terjemahan"
        android:textSize="@dimen/dimens_text_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_means_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimens_text_18"
        tools:text="@string/app_name" />
</LinearLayout>