<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimens_16"
    android:paddingTop="@dimen/dimens_8"
    android:paddingRight="@dimen/dimens_16"
    android:paddingBottom="@dimen/dimens_8">

    <TextView
        android:id="@+id/dots_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_16"
        android:layout_marginRight="@dimen/dimens_16"
        android:textSize="@dimen/logo_splash"
        tools:text="@string/dot" />

    <TextView
        android:id="@+id/txt_word_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/dots_item"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/txt_means_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_word_item"
        android:layout_toRightOf="@id/dots_item"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="@string/app_name" />
</RelativeLayout>